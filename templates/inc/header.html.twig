<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary ps-4">
  <a class="navbar-brand" href="{{ path('homepage') }}">A place to sleep</a>
  <button
    class="navbar-toggler"
    type="button"
    data-bs-toggle="collapse"
    data-bs-target="#navbarColor01"
    aria-controls="navbarColor01"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="{{ path('homepage') }}">Accueil</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="{{ path('ads_list') }}">Annonces</a>
      </li>
    </ul>

    <ul class="navbar-nav ms-auto">
      {% if app.user is not null %}
      <!-- Si l'user est connecté -->

      <li class="nav-item dropdown">
        <a
          href="#"
          class="nav-link dropdown-toggle"
          id="accountDropdownLink"
          data-bs-toggle="dropdown"
          aria-labelledby="accountDropdownLink"
        >
          <img
            src="{{ app.user.avatar }}"
            alt="Avatar de {{ app.user.fullName }}"
            class="avatar avatar-small"
          />
          {{ app.user.fullName }}
        </a>

        <div
          class="dropdown-menu-right dropdown-menu"
          aria-labelledby="accountDropdownLink"
          aria-expanded="false"
        >
          <a class="dropdown-item" href="{{ path('account_home') }}"
            >Mon compte</a
          >
          <a class="dropdown-item" href="{{ path('account_bookings') }}"
            >Mes reservations</a
          >
          <a class="dropdown-item" href="{{ path('account_profile') }}"
            >Modifier mon profil</a
          >

          <!-- Partie administrateur -->
          {% if is_granted('ROLE_ADMIN') %} {# Le contenu à afficher si
          l'utilisateur a l'autorisation ROLE_ADMIN #}
          <a
            class="dropdown-item fw-bolder"
            href="{{ path('admin_account_login') }}"
            >ADMINISTRATION</a
          >

          <!-- Créer une ligne de division dans le dropdown -->
          <div class="dropdown-divider"></div>

          <a class="dropdown-item" href="{{ path('account_logout') }}"
            >Deconnexion</a
          >
        </div>
      </li>
      {% else %}

      <a class="dropdown-item" href="{{ path('account_logout') }}"
        >Deconnexion</a
      >

      {% endif %} {% else %}
      <!-- Si il n'est pas co -->
      <li class="nav-item">
        <a class="nav-link" href="{{ path('account_register') }}"
          >Inscription</a
        >
      </li>

      <li class="nav-item">
        <a class="nav-link" href="{{ path('account_login') }}">Connexion</a>
      </li>
      {% endif %}
    </ul>
  </div>
</nav>

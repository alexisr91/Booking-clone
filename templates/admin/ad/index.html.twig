{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}

    <div class="container-fluid">

        <h1 class="my-5">Gestion des annonces</h1>
        
        <table class="table table-hover">

            <thead>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th class="text-center">Reservation</th>
                <th class="text-center">Note</th>
                <th>Actions</th>



            </thead>
            <tbody>
            {% for ad in pagination.data %}

            <tr>
                <td>{{ad.id}}</td>
                <td>{{ad.title}}</td>
                <td>
                    <img src="{{ad.user.avatar}}" alt="Avatar de {{ad.user.fullName}}" class="avatar avatar-xs">
                    <small>{{ad.user.fullName}}</small>
                
                </td>
                <td class="text-center"><span class="badge badge-infos rounded">{{ad.bookings|length}}</span></td>
                <td class="text-center"><span class="badge badge-success rounded">{{ad.averageratings|number_format(1,',',' ')}}</span></td>
                <td>

                    <p><a href="{{path('admin_ads_edit',{'id': ad.id})}}" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a></p>
                    <p><a href="{{path('admin_ads_delete',{'id':ad.id})}}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a></p>
                </td>
            </tr>


            {% endfor %}
            </tbody>


        </table>

        {{pagination.display()}}

    </div>
{% endblock %}
